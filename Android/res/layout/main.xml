<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="호출 가능 여부 : " />

    <Button
        android:id="@+id/btn_card_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt"
        android:layout_below="@+id/txt"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:text="카드결제" />

    <TextView
        android:id="@+id/txt_callable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_card_payment"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt"
        android:text="페이앳을 불러올 수 없습니다." />

    <Button
        android:id="@+id/btn_cash_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_card_payment"
        android:layout_below="@+id/btn_card_payment"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:text="현금결제" />

</RelativeLayout>
